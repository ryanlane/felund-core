# felund PHP relay — environment variables
# Copy to .env (git-ignored) and fill in your values.
# The .htaccess and nginx.conf both block HTTP access to .env files.

# ── Database driver ───────────────────────────────────────────────────────────
# sqlite  (default) — zero setup, good for personal / small-group use
# mysql             — recommended for production / high-traffic deployments
DB_DRIVER=sqlite

# ── SQLite (only used when DB_DRIVER=sqlite) ──────────────────────────────────
# Path to the SQLite database file.  Must be writable by the web-server process
# and outside the document root, or protected by .htaccess (default location
# is data/ which is blocked by the included .htaccess).
# DB_PATH=/var/lib/felund/felund_rendezvous.sqlite

# ── MySQL / MariaDB (only used when DB_DRIVER=mysql) ─────────────────────────
# Create the database and user first:
#   CREATE DATABASE felund CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
#   CREATE USER 'felund'@'localhost' IDENTIFIED BY 'changeme';
#   GRANT ALL PRIVILEGES ON felund.* TO 'felund'@'localhost';
#   FLUSH PRIVILEGES;
# Tables are created automatically on first request.
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DBNAME=felund_data
MYSQL_USER=felund
MYSQL_PASSWORD=changeme
